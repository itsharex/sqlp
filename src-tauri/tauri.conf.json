{
  "$schema": "../node_modules/@tauri-apps/cli/schema.json",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "beforeBuildCommand": "pnpm build",
    "devPath": "http://localhost:8080",
    "distDir": "../dist"
  },
  "package": {
    "productName": "InsightSQL",
    "version": "../package.json"
  },
  "tauri": {
    "windows": [
      {
        "fullscreen": false,
        "width": 840,
        "height": 640,
        "resizable": true,
        "title": "InsightSQL",
        "fileDropEnabled": false
      }
    ],
    "bundle": {
      "active": true,
      "targets": ["dmg", "deb", "appimage", "msi"],
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "copyright": "",
      "category": "DeveloperTool",
      "identifier": "",
      "macOS": {
        "entitlements": null,
        "exceptionDomain": "",
        "frameworks": [],
        "providerShortName": null,
        "signingIdentity": null
      },
      "windows": {
        "certificateThumbprint": null,
        "digestAlgorithm": "sha256",
        "timestampUrl": ""
      },
      "deb": {
        "depends": []
      },
      "externalBin": [],
      "longDescription": "",
      "resources": [],
      "shortDescription": ""
    },
    "security": {
      "csp": null
    },
    "allowlist": {
      "all": true
    }
  }
}
